<resources>
<!-- Light application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#3F51B5</item>
    <item name="colorPrimaryDark">#303F9F</item>
    <item name="colorAccent">#FF4081</item>
    <item name="backgroundcolor">#fcfcfc</item>
    <item name="cardbackground">#ffffff</item>
    <item name="textcolor">#808080</item>
    <item name="tintcolor">#ffffff</item>
    <item name="buttoncolor">#2196F3</item>

</style>
<!-- Dark application theme. -->
<style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#212121</item>
    <item name="colorPrimaryDark">#000000</item>
    <item name="colorAccent">#FF4081</item>
    <item name="backgroundcolor">#303030</item>
    <item name="cardbackground">#424242</item>
    <item name="textcolor">#ffffff</item>
    <item name="tintcolor">#ffffff</item>
    <item name="buttoncolor">#2196F3</item>

</style>

    <style name="SpinnerLook"
        parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">?attr/textcolor</item>
        <item name="android:background">?attr/backgroundcolor</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="TextviewStyle">
        <item name="android:textColor">?attr/textcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textColor">?attr/textcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>