<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relLa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundcolor">

    <TextView
        android:id="@+id/myOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="25dp"
        android:textColor="?attr/textcolor"
        android:text="@string/myChoice_opis_budynku"
        android:textSize="19sp" />
    <ImageView
        android:id="@+id/imageView_MyChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/myUwagi"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:contentDescription="@string/opis_obrazka_myChoice" />


    <TextView
        android:id="@+id/myUwagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myOpis"
        android:paddingStart="25dp"
        android:paddingEnd="2dp"
        android:textColor="?attr/textcolor"
        android:text="@string/myChoice_uwagi_do_opisu" />

    <TextView
        android:id="@+id/napBud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_MyChoice"
        android:textColor="?attr/textcolor"
        android:text="@string/myChoice_budynek" />

    <TextView
        android:id="@+id/myBudynek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_MyChoice"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/napBud"
        android:layout_marginStart="82dp"
        android:padding="5dp"
        android:text="@string/myChoice_budynek_wartosc"
        android:textSize="30sp"
        android:textColor="?attr/textcolor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myPietro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/myBudynek"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/napPietro"
        android:padding="5dp"
        android:text="@string/myChoice_pietro_poziom"
        android:textSize="24sp"
        android:textColor="?attr/textcolor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/napPietro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/myBudynek"
        android:layout_marginStart="70dp"
        android:layout_toEndOf="@id/myBudynek"
        android:textColor="?attr/textcolor"
        android:text="@string/myChoice_pietro" />

    <TextView
        android:id="@+id/opisBud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/myUwagi"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:textColor="?attr/textcolor"
        android:text="@string/myChoice_opis_budynku_wartosc" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="@string/adds_size_in_xml"
        ads:adUnitId="@string/adds_in_xml">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
